<div class="detailsContainer">
    <h2 class="autoTitel"><%= car.$.name %></h2>
    <br>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="<%= car.icon %>" alt="">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="<%= car.icon2 %>" alt="">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="<%= car.icon3 %>" alt="">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>


    <div class="tableContainer">
        <table class="table table-striped">
            <tr>
                <th class="tableHeader" scope="row">Fahrzeugdaten</th>
                <td></td>
            </tr>
            <tr>
                <th scope="row">Preis:</th>
                <td><%= car.fahrzeugdaten.preis.wert %> <%= car.fahrzeugdaten.preis.einheit %></td>
            </tr>
            <tr>
                <th scope="row">Kilometerstand:</th>
                <td><%= car.fahrzeugdaten.kmstand.wert %> <%= car.fahrzeugdaten.preis.einheit %></td>
            </tr>   
            <tr>
                <th scope="row">Leistung:</th>
                <td><%= car.fahrzeugdaten.leistung.wert %> <%= car.fahrzeugdaten.leistung.einheit %></td>
            </tr>     
            <tr>
                <th scope="row">Baujahr:</th>
                <td><%= car.zulassungsbescheinigung.baujahr._ %></td>
            </tr> 
            <tr>
                <th scope="row">Schadstoffklasse:</th>
                <td><%= car.zulassungsbescheinigung.schadstoffklasse._ %></td>
            </tr> 
            <tr>
                <th scope="row">Kraftstoffart:</th>
                <td><%= car.zulassungsbescheinigung.kraftstoffart._ %></td>
            </tr>
            <tr>
                <th scope="row">Verbrauchs- und Emissionsdaten nach NEFZ:</th>
                <td> </td>
            </tr>
            <tr>
                <th scope="row">Kraftstoffverbrauch innerorts:</th>
                <td><%= car.emissionsdaten.nefz.vebrauch.innerorts.wert %> <%= car.emissionsdaten.nefz.vebrauch.innerorts.einheit %></td>
            </tr> 
            <tr>
                <th scope="row">Kraftstoffverbrauch außerorts:</th>
                <td><%= car.emissionsdaten.nefz.vebrauch.außerorts.wert %> <%= car.emissionsdaten.nefz.vebrauch.außerorts.einheit %></td>
            </tr> 
            <tr>
                <th scope="row">Kraftstoffverbrauch kombiniert:</th>
                <td><%= car.emissionsdaten.nefz.vebrauch.kombiniert.wert %> <%= car.emissionsdaten.nefz.vebrauch.kombiniert.einheit %></td>
            </tr>  
            <tr >
                <th scope="row">CO2-Emission-Kombi:</th>
                <td><%= car.emissionsdaten.nefz.co2_emission_kombi.wert %> <%= car.emissionsdaten.nefz.co2_emission_kombi.einheit %></td>
            </tr>   
            <tr>
                <th scope="row">Verbrauchs- und Emissionsdaten nach WLTP:</th>
                <td> </td>
            </tr>
            <tr>
                <th scope="row">sehr schnell:</th>
                <td><%= car.emissionsdaten.wltp.sehr_schnell.wert %> <%= car.emissionsdaten.wltp.sehr_schnell.einheit %></td>
            </tr>
            <tr>
                <th scope="row">schnell:</th>
                <td><%= car.emissionsdaten.wltp.schnell.wert %> <%= car.emissionsdaten.wltp.schnell.einheit %></td>
            </tr>
            <tr>
                <th scope="row">langsam:</th>
                <td><%= car.emissionsdaten.wltp.langsam.wert %> <%= car.emissionsdaten.wltp.langsam.einheit %></td>
            </tr>
            <tr>
                <th scope="row">CO2-Emission-Kombi:</th>
                <td><%= car.emissionsdaten.wltp.co2_emission_kombi.wert %> <%= car.emissionsdaten.wltp.co2_emission_kombi.einheit %></td>
            </tr>
            <tr>
                <th scope="row">Schadstoffklasse:</th>
                <td><%= car.emissionsdaten.wltp.co2_emission_kombi.wert %> <%= car.emissionsdaten.wltp.co2_emission_kombi.einheit %></td>
            </tr>

        </table>
    </div>
</div>